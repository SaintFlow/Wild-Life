<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="commonflow.wildlife.AnimalClassList">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1.0"

            android:orientation="horizontal" >

            <Button
                android:id="@+id/mammals_button"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/lightBlue1"
                android:layout_margin="@dimen/text_margin"
                android:layout_weight="1.0"
                android:text="Mammals" />

            <Button
                android:id="@+id/birds_button"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/lightBlue2"
                android:layout_margin="@dimen/text_margin"
                android:layout_weight="1.0"
                android:text="Birds" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1.0"
            android:orientation="horizontal" >

            <Button
                android:id="@+id/fish_button"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@android:color/holo_blue_light"
                android:layout_margin="@dimen/text_margin"
                android:layout_weight="1.0"
                android:text="Fish"
                android:textColor="#FFFFFF"/>

            <Button
                android:id="@+id/reptiles_button"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/lightBlue3"
                android:layout_margin="@dimen/text_margin"
                android:layout_weight="1.0"
                android:text="Reptiles" />

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1.0"
            android:orientation="horizontal" >

            <Button
                android:id="@+id/amphibians_button"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@android:color/holo_blue_light"
                android:layout_margin="@dimen/text_margin"
                android:layout_weight="1.0"
                android:text="Amphibians"
                android:textColor="#FFFFFF"/>

            <Button
                android:id="@+id/anthropods_button"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/lightBlue3"
                android:layout_margin="@dimen/text_margin"
                android:layout_weight="1.0"
                android:text="Anthropods" />

        </LinearLayout>
    </LinearLayout>
</RelativeLayout>
