<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="commonflow.wildlife.MainActivity">

    <LinearLayout
        app:layout_behavior="@string/appbar_scrolling_view_behavior"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1.0"
            android:layout_margin= "@dimen/activity_vertical_margin"

            android:orientation="horizontal" >

            <Button
                android:id="@+id/animal_list_button"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/lightBlue1"
                android:layout_margin= "@dimen/activity_vertical_margin"
                android:layout_weight="1.0"
                android:text="Full Animal List" />

            <Button
                android:id="@+id/animal_classes_button"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/lightBlue2"
                android:layout_margin="@dimen/text_margin"
                android:layout_weight="1.0"
                android:text="Animal Classes" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1.0"
            android:layout_margin= "@dimen/activity_vertical_margin"
            android:orientation="horizontal" >

            <Button
                android:id="@+id/help_button"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@android:color/holo_blue_light"
                android:layout_margin="@dimen/text_margin"
                android:layout_weight="1.0"
                android:text="Trouble Identifying an Animal?"
                android:textColor="#FFFFFF"/>

            <Button
                android:id="@+id/options_button"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/lightBlue3"
                android:layout_margin="@dimen/text_margin"
                android:layout_weight="1.0"
                android:text="Options" />

        </LinearLayout>
    </LinearLayout>
</RelativeLayout>
